generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  email     String   @unique
  password  String
  news      News[]   @relation("UserNews")
  sites     Site[]   @relation("UserSites")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model News {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  site      String
  url       String   @unique
  parsed    Boolean  @default(false)
  forced    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user   User?   @relation(fields: [userId], references: [id], name: "UserNews")
  userId String? @map("user_id") @db.ObjectId

  siteRef Site?   @relation(fields: [siteId], references: [id], name: "SiteNews")
  siteId  String? @map("site_id") @db.ObjectId
}

model Site {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  feed      String
  parsed    Boolean  @default(false)
  forced    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  news   News[]  @relation("SiteNews")
  user   User?   @relation(fields: [userId], references: [id], name: "UserSites")
  userId String? @map("user_id") @db.ObjectId
}
